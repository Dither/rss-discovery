{
	"name": "RSS Discovery",
	"developer": {
		"name": "BS-Harou (Martin Kadlec)",
		"url": "http://blog.martinkadlec.eu"
	},
	"content_scripts": [{
		"matches": ["*://*/*"],
		"run_at": "document_start",
		"js": ["includes/rss_discovery.js"]
	}],
	"description": "RSS feed discovery icon for Smart RSS extension.",
	"manifest_version": 2,
	"version": "2.0",
	"background": {
		"page": "index.html"
	},
	"web_accessible_resources": ["modules/*", "rss.html"],
	"permissions": ["https://*/*", "http://*/*", "chrome://favicon/*", "storage", "webRequest", "webRequestBlocking", "tabs",  "<all_urls>"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'unsafe-eval';",
	"page_action": {
		"default_title": "RSS discovery",
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"icons": {
		"48": "images/icon48.png",
		"64": "images/icon64.png",
		"96": "images/icon96.png",
		"128": "images/icon128.png" 
	}
}
